    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Header -->
        <header id="header">
            <div class="inner">

                <!-- Logo -->

                <a href="~/Home/Index" class="logo">

                    <span class="symbol"><img src="/images/logo.svg" alt="" /></span><span class="title">Adopciones el gallo de oro</span>
                </a>

                <!-- Nav -->
                <nav>
                    <ul>
                        <li><a href="#menu">Menu</a></li>
                    </ul>
                </nav>

            </div>
        </header>



        <!-- Menu -->
        <nav id="menu">
            <h2>Menu</h2>
            <ul>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                @if (User.IsInRole("Cliente") || User.IsInRole("Admin"))
                {
                    <li>@Html.ActionLink("Mascotas en adopcion", "Index", "Mascotas")</li>
                    <li>@Html.ActionLink("Mis Mascotas", "ClienteMascotas", "Account")</li>
                }
                @if (User.IsInRole("Admin"))
                {
                    <li>@Html.ActionLink("Usuarios", "Index", "Account")</li>
                    @*<li>@Html.ActionLink("Citas", "Index", "Citas")</li>*@
                    <li>@Html.ActionLink("Clientes", "Index", "Personas")</li>
                }
                <li>@Html.Partial("_LoginPartial")</li>
            </ul>
        </nav>

        <!-- Main -->
        <div id="main">
            <div class="inner">
                <header>
                    <h1>
                        Adopta una mascota <br />
                    </h1>
                    <h6>Ayudando a que ellos tengan un buen hogar.</h6>
                </header>

                <section class="tiles"></section>
            </div>
        </div>
        <div class="table-responsive container body-content">

            @RenderBody()


