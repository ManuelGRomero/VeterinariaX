@model ElGalloDeOro.Models.RegisterViewModel
@{
    ViewBag.Title = "Registate";
}

<h2>@ViewBag.Title.</h2>

<div class="panel-body">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Crea una nueva cuenta.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>

        //Aquí empiezan los datos del Cliente o Dueño

        <div class="form-group">
            @Html.LabelFor(m => m.nombre, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.nombre, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.apellidoP, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.apellidoP, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.apellidoM, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.apellidoM, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.fechaNac, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.fechaNac, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.telefono, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.telefono, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.domicilio, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.domicilio, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ciudad, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.ciudad, new { @class = "form-control" })
            </div>
        </div>

        <div hidden class="form-group">
            <label for="rol" class="col-md-2 control-label">Rol</label>
            <div class="col-md-10">
                <select hidden id="rol" , name="rol" class="form-control">
                    <option value="Cliente">Cliente</option>
                </select>
            </div>
        </div>

        @*<div hidden class="form-group">
            <label for="rol" class="col-md-2 control-label">Rol</label>
            <div class="col-md-10">
                <select hidden id="rol" , name="rol" class="form-control">
                    <option value="Capturista">Capturista</option>
                </select>
            </div>
        </div>*@

        if (User.IsInRole("Admin"))
        {
            <div class="form-group">
                <label for="rol" class="col-md-2 control-label">Rol</label>
                <div class="col-md-10">
                    <select id="rol" , name="rol" class="form-control">
                        <option value="Admin">Administrador</option>
                        <option value="Cliente">Cliente</option>
                        <option value="Capturista">Capturista</option>
                    </select>
                </div>
            </div>
        }
    

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Registrarse" />
            </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
